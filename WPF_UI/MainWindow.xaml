<Window x:Class="WPF_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:WPF_UI" mc:Ignorable="d" Title="MainWindow"
        Background="Silver" Height="400" Width="500" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="AddButton" Content="Additions" Style="{StaticResource myButton}" HorizontalAlignment="Left" Margin="2,26,0,0" VerticalAlignment="Top" />
        <Button x:Name="DeleteButton" Content="Deletions" Style="{StaticResource myButton}" HorizontalAlignment="Right" Margin="0,26,2,0" VerticalAlignment="Top" Grid.Column="1" />
        <Button x:Name="UpdateButton" Content="Updatings" Style="{StaticResource myButton}" HorizontalAlignment="Left" Margin="2,0,0,26" VerticalAlignment="Bottom" Grid.Row="1" />
        <Button x:Name="SearchButton" Content="Searchings" Style="{StaticResource myButton}" HorizontalAlignment="Right" Margin="0,0,2,26" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1" />
    </Grid>
</Window>
